{
  "name": "@codematic.io/cdp-editor",
  "version": "2.1.1",
  "description": "A customizable React rich text editor component built with TailwindCSS and Ant Design, designed for seamless integration into openCDP and modern React applications.",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/lib.d.ts",
  "sideEffects": [
  "*.css",
  "src/index.css"
],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/index.css": "./dist/index.css"
  },
  "homepage": "https://github.com/code-matic/openCDP-editor",
  "keywords": [
    "React",
    "Rich Text Editor",
    "TailwindCSS",
    "Ant Design",
    "WYSIWYG",
    "Component",
    "Customizable",
    "openCDP",
    "Editor",
    "JavaScript",
    "TypeScript",
    "UI",
    "Modern",
    "Integration",
    "Plugin",
    "Formatting",
    "Toolbar",
    "Content",
    "Library",
    "Open Source"
  ],
  "author": "codematic.io",
  "overrides": {
    "postcss-calc": "^9.0.1"
  },
  "dependencies": {
    "dompurify": "^3.2.6"
  },
"scripts": {
  "start": "react-scripts start",
  "build": "react-scripts build",
  "clean": "rimraf dist",
  "build:js": "webpack --mode production",
  "build:types": "tsc", 
  "webpack-build": "npm run clean && npm run build:js && npm run build:types && node scripts/rename-types.js",
  "prod": "npm run webpack-build && npm pack" 
},
  "peerDependencies": {
    "antd": "^6.1.0",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "dts-bundle-generator": "^9.5.1",
    "html-webpack-plugin": "^5.6.4",
    "ignore-loader": "^0.1.2",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "react-scripts": "^5.0.1",
    "rimraf": "^6.1.2",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "terser-webpack-plugin": "^5.3.14",
    "typescript": "^4.9.5",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
